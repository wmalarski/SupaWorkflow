{
  "name": "@supa-workflow/next-front-end",
  "version": "0.1.0",
  "private": true,
  "source": "src/index.ts",
  "main": "dist/ui-lib.js",
  "module": "dist/ui-lib.module.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "test": "jest  --maxWorkers=2",
    "test:watch": "jest --watch --maxWorkers=2",
    "test:coverage": "jest --coverage --maxWorkers=2"
  },
  "dependencies": {
    "@supa-workflow/services": "1.0.0"
  },
  "devDependencies": {
    "next-transpile-modules": "8.0.0"
  },
  "jest": {
    "globalSetup": "<rootDir>/src/tests/test.env.ts",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/src/tests/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/src/**/*.test.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "./.next/",
      "./node_modules/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/src/**/*.stories.tsx",
      "!<rootDir>/src/tests/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setupTests.ts"
    ]
  }
}
