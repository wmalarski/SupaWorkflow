{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/atoms/*": [
        "./atoms/*"
      ],
      "@/organisms/*": [
        "./organisms/*"
      ],
      "@/molecules/*": [
        "./molecules/*"
      ],
      "@/templates/*": [
        "./templates/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@supa-workflow/services": [
        "../../services/src/index"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json"
  ]
}